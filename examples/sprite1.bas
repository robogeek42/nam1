10 MODE 1
20 DIM BUF(7) : REM 32 byte buffer
30 DS=8 : I=0 : D=0
40 BADDR=VARPTR(BUF(0))
50 FOR I=0 TO DS-1
60 READ D
70 POKE BADDR+I, D
80 NEXT
85 PRINT "Data at 0x";HEX$(BADDR)
90 GOTO 200

100 DATA $18,$36,$7E,$FF,$FF,$7E,$36,$18

200 SPR_LOADP BADDR, 0
210 SPR_PATTERN 0,0
220 SPR_COLOUR 0,15
230 SPR_ENABLE 1
240 SPR_POS 0,100,100

